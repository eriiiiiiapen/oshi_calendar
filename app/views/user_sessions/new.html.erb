<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
   <h1>ログイン</h1>
     <%= form_with(model: @user, local: true) do |form| %>
      <div class="field">
         <%= form.label :email, User.human_attribute_name(:email) %>
         <%= form.text_field :email, class: 'form-control' %>
      </div>

      <div class="field">
        <%= form.label :password, User.human_attribute_name(:password) %>
        <%= form.password_field :password, class: 'form-control' %>
      </div>

      <%= form.submit (t 'defaults.login'), class: 'btn btn-warning' %>
     <% end %>
     <div class='text-center'>
     <button class='btn btn-warning'><%= link_to (t '.to_register_page'), new_user_path %></button>
     </div>
     </div>
      </div>
   </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">

<%= form_with(model: merchandise, local: true) do |form| %>

  <div class="name">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control'   %>
  </div>

  <div class="time">
  <%= form.label :start_at %>
  <%= form.datetime_select :start_at, class: 'form-control'   %>
  </div>

  <div class="time">
  <%= form.label :end_at %>
  <%= form.datetime_select :end_at, class: 'form-control'   %>
  </div>

  <div class="content">
    <%= form.label :content %>
    <%= form.text_field :content, class: 'form-control'   %>
  </div>

  <div class="price">
    <%= form.label :price %>
    <%= form.text_field :price, class: 'form-control'   %>
  </div>

  <div class="submit">
    <%= form.submit %>
  </div>

<% end %>
</div>
</div>
</div>
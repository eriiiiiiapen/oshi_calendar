<div class= 'main-container'>
<%= month_calendar(attribute: :start_at, end_attribute: :end_at, events: @merchandises) do |date, merchandises| %>
  <%= date.day %>
  
  <% merchandises.each do |merchandise| %>
  <div>
    <%= link_to merchandise.name, edit_merchandise_path(merchandise), class: 'merchandise-text' %>

    <% if current_user.bookmark?(merchandise) %>
    <%= render 'unbookmark', {merchandise: merchandise} %>
    <% else %>
      <%= render 'bookmark', {merchandise: merchandise} %>
    <% end %>
  </div>
  <% end %>
<% end %>

<h3>今月の推し活</h3>

<div class='innner-text'>
<% if @bookmarks_merchandises.present? %>
  <% @bookmarks_merchandises.each do |merchandise| %>
    <p><%= link_to merchandise.name, edit_merchandise_path(merchandise), class: 'merchandise-text' %></p>
    <%= merchandise.price %>
    ×
    <%= current_user.bookmarks.find_by(merchandise_id: merchandise.id).amount %>
    =
    <%= merchandise.price * current_user.bookmarks.find_by(merchandise_id: merchandise.id).amount %>

    <div class='form-text'>
    <%= form_with(url: update_amount_url, method: :post, local: true) do |form| %>
      <%= form.hidden_field :merchandise_id, :value => merchandise.id %>
      <%= form.number_field :amount, placeholder: '個数を変更' %>
      <%= form.submit "更新" %>
    <% end %>
    </div>
  <% end %>
</div>
 
<h3>今月の推し額</h3>
  <%= "#{@total_price}円" %>
<% else %>
購入なし
<% end %>
</div>

